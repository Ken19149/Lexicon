{
    "manifest_version": 3,
    "name": "Lexicon",
    "description": "Accelerate language learner's vocabualary",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/script.js"]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
  }